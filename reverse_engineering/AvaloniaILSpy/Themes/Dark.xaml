<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml"/>

    <Style>
        <Style.Resources>
        
            <Color x:Key="ThemeCodeBackgroundColor">#FF1E1E1E</Color>
            <Color x:Key="ThemeCodeForegroundColor">#FFFFFFFF</Color>

            <SolidColorBrush x:Key="ThemeCodeBackgroundBrush" Color="{DynamicResource ThemeCodeBackgroundColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="ThemeCodeForegroundBrush" Color="{DynamicResource ThemeCodeForegroundColor}"></SolidColorBrush>
            
            <sys:String x:Key="CSharp-Mode">CSharp-Mode-Dark.xshd</sys:String>
            <sys:String x:Key="ILAsm-Mode">ILAsm-Mode.xshd</sys:String>
        
        </Style.Resources>
    </Style>
    
</Styles>